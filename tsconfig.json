{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "noImplicitThis": false,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@web/*": ["web/*"],
      "@components/*": ["web/components/*"],
      "@web-utils/*": ["web/util/*"],
      "@modules": ["electron/src/modules"],
      "@modules/*": ["electron/src/modules/*"],
      "@utils": ["electron/src/utils"],
      "@utils/*": ["electron/src/utils/*"],
      "@src/*": ["electron/src/*"],
      "@config": ["electron/src/config.ts"],
      "@router": ["electron/src/router"],
      "@root/*": ["electron/*"],
    },
    "strictNullChecks": false,
    "types": [
      "node",
      "vite/client",
      "electron"
    ]
  },
  "include": [
    "*.ts",
    "**/*.ts",
    "**/*.svelte",
    "*.svelte",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}